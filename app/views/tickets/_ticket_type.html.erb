<div class="container">
  <h1>Create Ticket</h1>
    <%= form_for [@event, @ticket_type] do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :max_quantity %>
      <%= f.number_field :max_quantity, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field(:price, in: 10.0..1000.0, class: "form-control") %>
    </div>
      <%= f.submit "Create Ticket", :class => "btn btn-success" %>
    <% end %>
</div>
