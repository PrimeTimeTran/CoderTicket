<div class="container">
  <h2>Create New Venue:</h2>
  <%= form_for @venue do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :full_address %>
      <%= f.text_field :full_address, class: "form-control"  %>
    </div>
    <div class="field">
      <%= f.label :region %>
      <%=  f.select :region_id, Region.all.map { |x| [x.name, x.id] } %>
    </div>
    <%= f.submit "Create", class: "btn btn-success" %>
  <% end %>
</div>
